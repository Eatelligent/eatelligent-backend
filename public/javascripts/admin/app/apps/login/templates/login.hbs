<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p class="alert-box" data-js-errors></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form">
      <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" placeholder="Enter email" data-js-email>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Password" data-js-password>
      </div>

      <button type="submit" class="btn btn-success pull-right">Login</button>
    </form>
  </div>
</div>