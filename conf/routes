# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

POST    /insert                     controllers.Application.insert

GET     /lasser                     controllers.Application.lasser

GET     /users                      controllers.UserController.listUsers

GET     /user/:id                   controllers.UserController.getUser(id: Long)

POST    /user                       controllers.UserController.saveUser

GET     /ingredients                controllers.IngredientController.listIngredients

GET     /ingredients/:recipeId      controllers.IngredientController.getIngredientsForRecipe(recipeId: Long)

GET     /ingredient/:id             controllers.IngredientController.getIngredient(id: Long)

POST    /ingredient                 controllers.IngredientController.saveIngredient


POST    /languages                  controllers.Application.saveLanguage

GET     /recipes/$id<[0-9]+>                controllers.RecipeController.getRecipe(id: Long)

GET     /recipes/:q                 controllers.RecipeController.getRecipesByQuery(q: String)

GET     /allrecipes                    controllers.RecipeController.listRecipes

POST    /recipe                     controllers.RecipeController.saveRecipe

GET     /pelle                      controllers.Application.pelle

GET     /imageform                  controllers.ImageController.imageForm

POST    /                           controllers.ImageController.create

GET     /tags/:id                   controllers.RecipeController.getTag(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
